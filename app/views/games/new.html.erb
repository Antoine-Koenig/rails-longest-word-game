<h1>New game</h1>
  <div class="letter">
    <% @letters.each do |letter| %>
      <p> <%= letter.capitalize %> </p>
      <% end %>
  </div>

  <div class='input'>
    <h2>What is the longest word you can find ?</h2>
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word">
      <input type="submit">
      <input id="letters" name="letters" type="hidden" value="<%= @letters %>" />
    </form>

  </div>
